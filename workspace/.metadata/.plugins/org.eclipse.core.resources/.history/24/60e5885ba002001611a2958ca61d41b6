		fail();
	}
	
	@Test
	public void bbb(){
		fail();		
	}
	
	@Test
	public void ccc(){
		fail();		
	}

	@Test
	public void soma(){
		
		int soma= 4+4;
		
		if(soma == 8){
			System.out.println("ok");
		}else{
			fail("Erro na soma");
		}
			
	}
	
